{
  "extends": [
    "@open-wc/eslint-config",
    "eslint-config-prettier"
  ],
  "plugins": [
    "markdown",
    "json"
  ],
  "globals": {
    "I18nMsg": true,
    "flush": true,
    "fixture": true,
    "sinon": true,
    "chai": true,
    "assert": true,
    "expect": true,
    "suite": true,
    "suiteSetup": true,
    "suiteTeardown": true,
    "setup": true,
    "teardown": true,
    "test": true,
    "WCT": true,
    "MockInteractions": true,
    "unwrap": true,
    "wrap": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      },
      "alias": {
        "map": [
          [
            "@components",
            "./components"
          ]
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}
